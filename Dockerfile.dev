FROM node:20-alpine

WORKDIR /app

# Copiar arquivos de configuração
COPY package.json ./
COPY pnpm-lock.yaml ./

# Instalar dependências
RUN npm install -g pnpm
RUN pnpm install

# Copiar código fonte
COPY . .

# Expor porta 3000
EXPOSE 3000

# Iniciar servidor de desenvolvimento
CMD ["pnpm", "run", "dev", "--host"]
